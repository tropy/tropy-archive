{
  "name": "tropy-archive",
  "version": "0.1.0",
  "description": "Export metadata and photos into a zip archive.",
  "main": "bundle.js",
  "hooks": {
    "export": true
  },
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -w -c"
  },
  "repository": "https://github.com/tropy/tropy-archive",
  "author": "Tropy",
  "license": "AGPL-3.0",
  "options": [
    {
      "field": "output",
      "label": "Output",
      "hint": "Location of output archive zip file",
      "default": "/path/to/archive.zip"
    }
  ],
  "dependencies": {
    "archiver": "^2.1.1"
  },
  "devDependencies": {
    "rollup": "^0.58.2",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0"
  }
}
