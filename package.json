{
  "name": "tropy-archive",
  "version": "1.0.0",
  "description": "Export metadata and photos into a zip archive.",
  "main": "bundle.js",
  "hooks": {
    "export": true
  },
  "scripts": {
    "build": "rollup -c rollup.config.prod.js",
    "watch": "rollup -w -c rollup.config.dev.js",
    "lint": "eslint src",
    "test": "electron-mocha --renderer"
  },
  "repository": "https://github.com/tropy/tropy-plugin-archive",
  "author": "Tropy",
  "license": "AGPL-3.0",
  "options": [
    {
      "field": "root",
      "label": "Root",
      "hint": "Zip root folder name",
      "default": "tropy",
      "required": true
    },
    {
      "field": "zipFile",
      "label": "Save as",
      "hint": "Default zip file location",
      "type": "save-file"
    },
    {
      "field": "prompt",
      "label": "Always ask?",
      "hint": "Always ask where to save the output file.",
      "type": "boolean"
    }
  ],
  "dependencies": {
    "cross-zip": "^3.0.0"
  },
  "devDependencies": {
    "bluebird": "^3.5.1",
    "electron": "^8.1.0",
    "electron-mocha": "^8.0.0",
    "rollup": "^0.58.2",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0"
  }
}
