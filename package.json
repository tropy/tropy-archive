{
  "name": "tropy-archive",
  "version": "0.1.1",
  "description": "Export metadata and photos into a zip archive.",
  "main": "bundle.js",
  "hooks": {
    "export": true
  },
  "scripts": {
    "build": "rollup -c rollup.config.prod.js",
    "watch": "rollup -w -c rollup.config.dev.js",
    "lint": "eslint src",
    "test": "electron-mocha --renderer"
  },
  "repository": "https://github.com/tropy/tropy-archive",
  "author": "Tropy",
  "license": "AGPL-3.0",
  "options": [
    {
      "field": "output",
      "label": "Output",
      "hint": "Location of output archive zip file",
      "default": "/path/to/archive.zip"
    }
  ],
  "dependencies": {
    "cross-zip": "^3.0.0"
  },
  "devDependencies": {
    "bluebird": "^3.5.1",
    "electron": "^1.7.10",
    "electron-mocha": "^5.0.0",
    "jsonld": "^1.0.1",
    "rollup": "^0.58.2",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^3.0.0"
  }
}
